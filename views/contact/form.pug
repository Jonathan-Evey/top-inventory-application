form(class="flex column container" id="form" data-type="narrow" action="/contact#form" method="POST")
    div(class="flex-group")
        div(class="flex column")
            label(for="name") Name
            input(type="text", name="name", id="name" value=(undefined===formInfo ? "" : formInfo.name)) 
        div(class="flex column")
            label(for="email") Email
            input(type="email", name="email", id="email" value=(undefined===formInfo ? "" : formInfo.email)) 
    label(for="subject") Subject
    input(type="text", name="subject", id="subject" value=(undefined===formInfo ? "" : formInfo.subject)) 
    label(for="message") message
    textarea(type='textarea', name="message", id="message", cols="30", rows="10") #{undefined===formInfo ? "" : formInfo.message} 
    button(type="submit" class="btn__accent | margin-block-start-6") Submit