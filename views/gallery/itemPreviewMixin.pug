mixin itemPreview(img, width, height, title, classValue, idValue, details)
    li(class=`card__item-preview ${classValue}` id=`${idValue}`)
        button(class="btn__item-preview")
            div(class="relative")
                img(class="img-placeholder" loading="lazy" src=`data:image/svg+xml,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%20viewBox='0%200%20${width}%20${height}'%3E%3C/svg%3E` width=`${width}` height=`${height}` alt="normal alt text")
                img(class="gallery-img" src=`${img}`, alt="", srcset="", loading="lazy")
            //- if details
             //-     p(class="details") #{details}
                
            div
                P #{title}
                p(class="details mobile") #{details}
                
                    